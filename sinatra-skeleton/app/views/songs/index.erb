<% @songs.each do |song| %>
  <div class="song">
    <h3><a href="/songs/<%= song.id %>"><%= song.song_title %></a> <small>(by: <%= song.author %>)</small></h3>
    <p>
      <%= song.url %>
    </p>
    <p>
      Posted on: <%= song.created_at %>
    </p>
  </div>
<% end %>

<hr/>
<a href="/songs/new">Post your favourite song!</a>
